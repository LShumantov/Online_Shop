@model Store
@{
    ViewData["Title"] = "Add a new Store";
}
<section class="password-change">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="headline">
                    <h2>Add a New Store</h2>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="change-form">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group text-center">
                                <img id="StoreLogoPreview" class="border-info rounded-circle" style="max-width: 150px" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Logo" class="control-label"></label>
                                <input asp-for="Logo" class="form-control" />
                                <span asp-validation-for="Logo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="align-middle">
                                <input type="submit" value="Create" class="btn btn-default" />
                                <a class="btn btn-default" asp-action="Index">Show All</a>
                            </div>
                        </form>                          
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{ 
    <script>

        $(document).ready(function () {
            var output = document.getElementById('StoreLogoPreview');
            output.src = $("#Logo").val();
        })
        $("#Logo").on("change", function () {
            var output = document.getElementById('StoreLogoPreview');
            output.src = $(this).val();
        })
    </script>
}
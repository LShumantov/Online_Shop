@model Store
@{
    ViewData["Title"] = "Delete Store";
}
<section class="password-change">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="headline">
                    <h2>Delete confirmation for @Model.Name</h2>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="change-form">
                        <form asp-action="Delete">
                        <div class="form-group text-center">
                            <img class="border-info rounded-circle" style="max-width: 150px" id="LogoPreview" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Logo" class="control-label"></label>
                            <input asp-for="Logo" class="form-control" readonly />
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" readonly />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" readonly />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">                          
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Confirm" class="btn btn-default" />
                                <a class="btn btn-default" asp-action="Index">Show All</a>
                        </div>
                        </form>                          
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
        })
    </script>
}
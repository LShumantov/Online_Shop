@using OnlineShop.Data.ViewModels; 
@model LoginVM;
@{ 
    ViewData["Title"] = "Log in to your account";
}
<section class="password-change">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="headline">
                    <h2>Log in to your account</h2>
                </div>
                @if (TempData["Error"] != null)
                {
                    <div class="col-md-12 alert alert-danger">
                        <span><b>Sorry!</b> - @TempData["Error"] </span>
                    </div>
                }
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="change-form">
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="EmailAddress" class="control-label"></label>
                                <input asp-for="EmailAddress" class="form-control" />
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-default" value="Log in">Log in</button>
                                <a class="btn btn-outline-secondary" asp-controller="Products" asp-action="Index">Cancel</a>
                            </div>
                        </form>                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

